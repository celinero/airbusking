<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <div class="form-group mb-3">
    <%= form.label :title, class:"col form-label" %>
    <%= form.text_field :title, class:"form-control", required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :genre_id, class:"col form-label" %>
    <%= form.select :genre_id, @genres.map {|g| [g.name, g.id]}, class: "form-select" %>
  </div>


  <div class="form-group mb-3">
    <%= form.label :description, class:"col form-label" %>
    <%= form.text_area :description, class:"form-control", required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :date, class:"col form-label" %>
    <%= form.date_field :date %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :time, class:"col form-label" %>
    <%= form.time_select :time %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :price, class:"col form-label" %>
    <%= form.number_field :price, step: "0.01" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :quantity, class:"col form-label" %>
    <%= form.number_field :quantity, step: "1" %>
  </div>

   <div class="form-group mb-3">
    <%= form.label :picture, class:"col form-label" %>
    <%= form.file_field :picture, class:"form-control-file", accept: 'image/jpg, image/jpeg' %>
  </div>

  <div class="actions text-center mt-5">
    <%= form.submit class:"btn btn-info"%>
  </div>
<% end %>
