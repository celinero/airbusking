<div class="container d-flex flex-column flex-md-row my-2 my-md-5">
  <div class="content col-12 col-md-7 col-lg-8 p-0 pr-md-3">
    <div class="col-12 p-0 main-preview mb-4">
      <%=image_tag image_select(@event), class:"thumbnail card-img top"%>
    </div>
  </div>

  <div class="sidebar col-lg-4 p-0 mx-2 d-md-block">
    <h1 class="mb-sm-2 mb-md-5"><%=@event.title%></h1>
    <h4 class="text-muted pb-sm-2 pb-md-3">Date: <%=@event.date%></h4>
    <h4 class="text-muted pb-sm-2 pb-md-3">Time: <%=@event.time%></h4>
    <p class="blockquote mt-2"><%=@event.description%></p>
    <%if current_user && @event.sold == false%>
       <%= button_to "Buy: $#{@event.price / 100.00}", create_payment_intent_path, method: :post, remote: true, params:{id: @event.id}, class: "btn btn-primary p-3"%>
      <button class='btn btn-secondary' disabled>SOLD</button>
    <%else%>
      <%=button_to "Login to buy", new_user_session_path, class: "btn btn-info"%>
    <%end%>
  </div>
  
</div>
      
<div class='container'>
  <div class ='d-flex justify-content-evenly'>     
    <%= link_to 'Edit', edit_event_path(@event.id), class: "btn btn-warning mr-3" if current_user.id == @event.user_id %> 
    <%= link_to 'Delete', @event, method: :delete, data: {confirm: "Are you sure?"} , class: "btn btn-danger mr-3" if current_user.id == @event.user_id %>
    <%= link_to 'Back', events_path, class: "btn btn-info mr-3" %>
  </div>
</div>
  


