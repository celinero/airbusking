<div class="container">

  <p id="notice"><%= notice %></p>

  <div class="d-flex flex-column align-items-center">
    <h1 class="py-5">Busker Profiles</h1>
    <% if !@busker_profile %>  
      <div class="text-center">                          
        <%= link_to 'New Busker Profile', new_busker_profile_path, class:"btn btn-info mb-3"%>
      </div>
    <% end %>
    <div class="mb-3">
      <h4>Search</h4>
      <%=form_with url: busker_profiles_path, method: :get, local: true do |form|%>
      <%= form.label :query, "Search by:" %>
      <%= form.text_field :query %>
      <%= form.select :option, ["name", "bio"] %>
      <%= form.submit "Search" %>
      <% end %>
    </div>
  </div>


    <div class="row justify-content-center">
      <%@busker_profiles.each do |busker_profile| %>
        <div class="col col-md-4">
           <div class="card mb-3">
          <%= image_tag image_select(busker_profile), class:"card-img-top img-size" %>
            <div class="card-body">
              <h5 class="card-title"><%= busker_profile.name%></h5>
              <p class="card-text"><%= busker_profile.bio%> </p>
              <%= link_to "Show", busker_profile_path(busker_profile.id), class:"btn btn-info btn-right" %>
             
            </div>
          </div>
          
        </div> 
      <%end%>
    </div>

</div>


