<div class="container d-flex flex-column flex-md-row my-2 my-md-5">
  <div class="content col-12 col-md-7 col-lg-8 p-0 pr-md-3">
    <div class="card p-3">
      <p id="notice"><%= notice %></p>

      <h2 class="text-center pb-3">
        <%= @busker_profile.name %>
      </h2>

      <p>
        <strong>Bio:</strong>
        <%= @busker_profile.bio %>
      </p>

  <div class ='d-flex justify-content-around'>   
    <%= link_to 'Edit', edit_busker_profile_path(@busker_profile), class: "pt-4 mr-3" if current_user&.id == @busker_profile.user_id %> 
    <span class="pt-4"> | </span>
    <%= link_to 'Delete', @busker_profile, method: :delete, data: {confirm: "Are you sure?"} , class: "btn pt-4 mr-3" if current_user&.id == @busker_profile.user_id %>
    <span class="pt-4"> | </span>
    <%= link_to 'Back', busker_profiles_path, class: "btn pt-4" %>
  </div>
