<%= form_with(model: review) do |form| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
        <% review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <p>Give a review to <%= @busker_profile&.name %></p>
    <%= form.hidden_field :user_id, value: current_user.id, required: true %>
    <%= form.hidden_field :busker_profile_id, value: @busker_profile_id, required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :comment, class:"col form-label" %>
    <%= form.text_area :comment, class:"form-control", required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :rating, class:"col form-label" %>
    <%= form.number_field :rating, class:"form-control", required: true, in: 0..10  %>
  </div>

  <div class="actions text-center mt-5">
    <%= form.submit class:"btn btn-info"%>
  </div>
<% end %>
